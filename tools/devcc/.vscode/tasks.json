{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Devcc: Install",
            "type": "shell",
            "command": "poetry install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Devcc: Run Tests",
            "type": "shell",
            "command": "poetry run pytest",
            "problemMatcher": [
                "$python"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Devcc: Run Tests with Coverage",
            "type": "shell",
            "command": "poetry run pytest --cov=devcc",
            "problemMatcher": [
                "$python"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Devcc: Run Lint",
            "type": "shell",
            "command": "poetry run flake8",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "Devcc: Run Type Check",
            "type": "shell",
            "command": "poetry run mypy .",
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}