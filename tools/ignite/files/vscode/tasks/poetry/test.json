{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "${project-name}: Run Tests",
            "type": "shell",
            "command": "poetry run pytest",
            "problemMatcher": [
                "$python"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "${project-name}: Run Tests with Coverage",
            "type": "shell",
            "command": "poetry run pytest --cov=${project-name}",
            "problemMatcher": [
                "$python"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}