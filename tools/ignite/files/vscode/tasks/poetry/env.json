{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "${projectName}: Remove Environment",
            "type": "shell",
            "command": "poetry env remove",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "${projectName}: Remove All Environments",
            "type": "shell",
            "command": "poetry env remove --all",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}